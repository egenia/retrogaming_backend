<script>
    function formatDate(date) {
        var monthNames = [
            "01", "02", "03",
            "04", "05", "06", "07",
            "08", "09", "10",
            "11", "12"
        ];

        var tmp = new Date(date);

        var day = tmp.getDate();
        var monthIndex = tmp.getMonth();
        var year = tmp.getFullYear();

        return day + '/' + monthNames[monthIndex] + '/' + year;
    }

    $(document).ready(function(){
        $('#savebbs').click(function(){
            $.post("/feed/create"
                  ,{
                      identifiant:$('#identifiant').val(),
                      version:$('#version').val(),
                      auteur:$('#auteur').val(),
                      projet_id:$('#projet_id').val(),
                      type:$('#type').val()
                    }
                  ,function(result){
                    getList();
                  })
        });
        $('.archive').click(function(){
            console.log(JSON.stringify($(this).attr('id')));
            $.post("/feed/archive"
                  ,{id:$('feed_id').val()}
                  ,function(result){
                    getList();
                  })
        });
        
        getList();
    })
    function archive(obj) {
        //alert(obj.id);
        //console.log(JSON.stringify($(this).attr('id')));
        $.post("/feed/archive"
                ,{id:obj.id}
                ,function(result){
                    //alert('done');
                    getList();
                })
    }

    function getList(){
        $.get("/feeds/list/<%= id %>"
                  ,{}
                  ,function(result){
                    var tb = $('#tb');
                    tb.html("");
                    $.each(result,function(a,b){
                        console.log(b);
                        var tmp = b.description;
                        tmp = tmp.substr(0,120)+'...';
                        if (b.archive==true)
                            var html ="<tr style='color:red;'><td>"+formatDate(b.date)+"</td><td>"+b.version+"</td><td>"+b.auteur+"</td><td>"+b.type2+"</td><td>"+tmp+"</td><td><a href='/feed/detail/"+b._id+"'>Consulter</a> | <a href='#' id='"+b._id+"' onclick='archive(this)'>DÃ©sarchiver</a></td></tr>";
                        else
                            var html ="<tr><td>"+formatDate(b.date)+"</td><td>"+b.version+"</td><td>"+b.auteur+"</td><td>"+b.type2+"</td><td>"+tmp+"</td><td><a href='/feed/detail/"+b._id+"'>Consulter</a> | <a href='#' id='"+b._id+"' onclick='archive(this)'>Archiver</a></td></tr>";
                        tb.append(html);
                    })
                  })
    }

    function delBbs(id){
         $.post("/bbs/delete"
                  ,{id:id}
                  ,function(result){
                    getList();
              })
    }
    function vote(id){
         $.post("/bbs/update"
                  ,{id:id}
                  ,function(result){
                    getList();
              })
    }
</script>